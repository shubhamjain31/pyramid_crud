{% extends 'layout.jinja2' %}
{% from "jinja_helpers.jinja2" import render_field %}

{% block content %}

<div class="container">
    <h1 class="text-center">Login</h1>
    {% if message_data %}
        <div class="alert {% if message_data.message_type == 'error' %}alert-warning {% else %} alert-{{ message_data.message_type }}{% endif %}"
            role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">Ã—</span>
            </button>
            {{message_data.message}}
        </div>
        {% endif %}
    <form action="{{url}}" method="post">
        <input type="hidden" name="csrf_token" value="{{ get_csrf_token() }}">
        {{render_field(form.username)}}
        {{render_field(form.password)}}

        <div class="row">
            <div class="form-group col-6">
                <button type="submit" class="btn btn-default">Submit</button>
            </div>
            <div class="form-group col-6 text-right">
                <p><a href="{{request.route_url('register')}}" class="btn btn-danger btn-sm">Register</a></p>
            </div>
        </div>
    </form>
</div>


{% endblock content %}